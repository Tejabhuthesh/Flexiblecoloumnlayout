<mvc:View controllerName="idflex.flex.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    
    height="100%"
	xmlns="sap.f">
  <FlexibleColumnLayout id="app" stateChange="onStateChanged" backgroundDesign="Solid">
		<beginColumnPages>
			<mvc:XMLView id="beginView" viewName="idflex.flex.view.List"/>
		</beginColumnPages>
		<midColumnPages>
			<mvc:XMLView id="detailView" viewName="idflex.flex.view.Detail"/>
		</midColumnPages>
        <endColumnPages>
			<mvc:XMLView id="aboutView" viewName="idflex.flex.view.About"/>
		</endColumnPages>
	</FlexibleColumnLayout>
</mvc:View>
